<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF4F2"
    tools:context=".StudentDetailsActivity">

    <EditText
        android:id="@+id/et_v_studentDetails_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        android:clickable="false"
        android:contextClickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="text"
        android:linksClickable="false"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_studentDetails_title" />

    <EditText
        android:id="@+id/et_v_studentDetails_fName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/et_v_studentDetails_username" />

    <EditText
        android:id="@+id/et_v_studentDetails_lName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/et_v_studentDetails_fName" />

    <EditText
        android:id="@+id/et_v_studentDetails_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/et_v_studentDetails_lName" />

    <EditText
        android:id="@+id/et_v_studentDetails_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/et_v_studentDetails_email" />

    <EditText
        android:id="@+id/et_v_studentDetails_GPA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/et_v_studentDetails_age" />

    <Spinner
        android:id="@+id/spn_v_studentDetails_major"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#42947E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_v_studentDetails_back"
        app:layout_constraintTop_toBottomOf="@+id/et_v_studentDetails_GPA" />

    <Button
        android:id="@+id/btn_v_studentDetails_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#42947E"
        android:fontFamily="@font/ar_one_sans"
        android:text="Update"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_v_studentDetails_major" />

    <Button
        android:id="@+id/btn_v_studentDetails_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#42947E"
        android:fontFamily="@font/ar_one_sans"
        android:text="Back"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_studentDetails_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Student Details"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_studentDetails_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="All fields must be filled out!"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_studentDetails_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_studentDetails_usernameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Username"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_studentDetails_username"
        app:layout_constraintEnd_toStartOf="@+id/et_v_studentDetails_username"
        app:layout_constraintTop_toTopOf="@+id/et_v_studentDetails_username" />

    <TextView
        android:id="@+id/tv_v_studentDetails_fNameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="First Name"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_studentDetails_fName"
        app:layout_constraintEnd_toStartOf="@+id/et_v_studentDetails_fName"
        app:layout_constraintTop_toTopOf="@+id/et_v_studentDetails_fName" />

    <TextView
        android:id="@+id/tv_v_studentDetails_lNameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Last Name"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_studentDetails_lName"
        app:layout_constraintEnd_toStartOf="@+id/et_v_studentDetails_lName"
        app:layout_constraintTop_toTopOf="@+id/et_v_studentDetails_lName" />

    <TextView
        android:id="@+id/tv_v_studentDetails_emailHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Email"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_studentDetails_email"
        app:layout_constraintEnd_toStartOf="@+id/et_v_studentDetails_email"
        app:layout_constraintTop_toTopOf="@+id/et_v_studentDetails_email" />

    <TextView
        android:id="@+id/tv_v_studentDetails_ageHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Age"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_studentDetails_age"
        app:layout_constraintEnd_toStartOf="@+id/et_v_studentDetails_age"
        app:layout_constraintTop_toTopOf="@+id/et_v_studentDetails_age" />

    <TextView
        android:id="@+id/tv_v_studentDetails_GPAHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="GPA"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_studentDetails_GPA"
        app:layout_constraintEnd_toStartOf="@+id/et_v_studentDetails_GPA"
        app:layout_constraintTop_toTopOf="@+id/et_v_studentDetails_GPA" />

    <TextView
        android:id="@+id/tv_v_studentDetails_majorHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Major"
        android:textAlignment="viewEnd"
        android:textColor="#42947E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/spn_v_studentDetails_major"
        app:layout_constraintEnd_toStartOf="@+id/spn_v_studentDetails_major"
        app:layout_constraintTop_toTopOf="@+id/spn_v_studentDetails_major" />
</androidx.constraintlayout.widget.ConstraintLayout>