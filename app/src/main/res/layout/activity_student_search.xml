<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF4F2"
    tools:context=".StudentSearchActivity">

    <Button
        android:id="@+id/btn_v_studentSearch_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#42947E"
        android:fontFamily="@font/ar_one_sans"
        android:text="Back"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_studentSearch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ar_one_sans"
        android:text="Search Students"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_v_studentSearch_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_studentSearch_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_v_studentSearch_studentListBG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="#42947E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_v_studentSearch_search">

            <ListView
                android:id="@+id/lv_v_studentSearch_results"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="#EAF4F2"
                android:divider="#42947E"
                android:dividerHeight="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_v_studentSearch_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ar_one_sans"
            android:text="Click to view/edit details. Long click to delete."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cl_v_studentSearch_studentListBG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_v_studentSearch_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/et_v_studentSearch_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_v_studentSearch_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_v_studentSearch_username"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_v_studentSearch_fName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="First Name"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/et_v_studentSearch_lName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_username" />

        <EditText
            android:id="@+id/et_v_studentSearch_lName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_v_studentSearch_fName"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_email" />

        <EditText
            android:id="@+id/et_v_studentSearch_minGPA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="Min. GPA"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/et_v_studentSearch_maxGPA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_fName" />

        <EditText
            android:id="@+id/et_v_studentSearch_maxGPA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="Max. GPA"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_v_studentSearch_minGPA"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_lName" />

        <EditText
            android:id="@+id/et_v_studentSearch_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/spn_v_studentSearch_major"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_minGPA" />

        <Spinner
            android:id="@+id/spn_v_studentSearch_major"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#42947E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_v_studentSearch_age"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_minGPA" />

        <Button
            android:id="@+id/btn_v_studentSearch_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#42947E"
            android:fontFamily="@font/ar_one_sans"
            android:text="Search"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_v_studentSearch_age" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>